<?xml version="1.0" encoding="UTF-8"?>
<!-- Please note, that the files defining the main menu (ie, MainMenuCommon,
     MainMenuMaster, and MainMenuEscape)
     can exist in $HOME/houdiniX.Y/ directory and will supplement
     the original definitions found in $HFS/houdini/ -->
<mainMenu>
  <menuBar>
    <subMenu id="hou_ctrl_submenu">
      <label>ctrl</label>
        <scriptItem id="keycam">
          <label>keycam</label>
          <scriptCode><![CDATA[
import hou_ctrl_utils as hcu
hcu.keycam_toggle()
          ]]></scriptCode>
        </scriptItem>
        <scriptItem id="color_palette">
          <label>color palette</label>
          <scriptCode><![CDATA[
import hou_ctrl_utils as hcu
hcu.color_editor_open()
          ]]></scriptCode>
        </scriptItem>
        <separatorItem/>
        <scriptItem id="reload_keycam">
          <label>reload keycam</label>
          <scriptCode><![CDATA[
import hou_ctrl_utils as hcu
hcu.keycam_reload()
          ]]></scriptCode>
        </scriptItem>
        <scriptItem id="reload_color_scheme">
          <label>reload color scheme</label>
          <scriptCode><![CDATA[
import hou_ctrl_utils as hcu
hcu.color_scheme_reload()
          ]]></scriptCode>
        </scriptItem>
        <scriptItem id="update_main_menu">
          <label>update main menu</label>
          <scriptCode><![CDATA[
import hou_ctrl_utils as hcu
hcu.main_menu_update()
          ]]></scriptCode>
        </scriptItem>
    </subMenu>
    <titleItem id="test">
      <label>ass</label>
    </titleItem>
</mainMenu>
